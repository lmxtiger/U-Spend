                <a href="./">Logout</a>
            </div>
        </div>
    </div>

    <div class="container">
        <form id="newEntryForm" method="get"></form>
    
        <div class="top_info" style="max-width: 900px; margin-top: 15px;">
            {{!-- <div class="parent">
                <div class="left">
                    <img src="css/pics/back-arrow.png" onclick="location.href='./home'" alt="back (to main page) arrow" height="30px" width="30px">
                </div>
                <p class="center">New Expense</p>
                <div class="right"></div>
            </div> --}}

            {{!-- Name of Spending--}}
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="pizza,T-shirt,laptop,..." 
            form="newEntryForm" required autofocus> 

            {{!-- Drop-down list of current categories --}}
            <label for="categories">Category</label>
            {{!-- <input list="categories" id="category" name="category" placeholder="New Category?"> --}}
            <select id="categories" name="category" form="newEntryForm">
                <option value="0" disabled>Select Category:</option>
                {{#each categories}}
                    <option value="{{id}}">{{@key}}</option>
                {{/each}}
                <option value="-1">+ New Category</option>
            </select>
            {{!-- <option value="1">Dining</option>
            <option value="2">Clothings</option>
            <option value="3">Fitness</option>
            <option value="4">Study</option>
            <option value="5">Electronics</option> --}}

            {{!-- Amount --}}
            <label for="amount">Amount</label>
            <div class="dollar">
                <input type="number" step="any" id="amount" name="amount" placeholder="e.g., $5.06; up to 20k" min="0" max="20000" 
                form="newEntryForm" required>
            </div>

            {{!-- Rating  --}}
            <label for="rating">Rating</label>
        </div>

        <div style="max-width: 900px;">
            {{!-- <form id="rating"
                method="get"
                action-xhr="https://amp.dev/documentation/examples/interactivity-dynamic-content/star_rating/set"
                target="_blank"> --}}
            {{!-- checked="checked" --}}
            <fieldset class="rating" form="newEntryForm">
                <input name="rating"
                type="radio"
                id="rating5"
                value="5"
                on="change:rating.submit">
                <label for="rating5" title="5 stars">☆</label>

                <input name="rating"
                type="radio"
                id="rating4"
                value="4"
                on="change:rating.submit">
                <label for="rating4" title="4 stars">☆</label>

                <input name="rating"
                type="radio"
                id="rating3"
                value="3"
                on="change:rating.submit">
                <label for="rating3" title="3 stars">☆</label>

                <input name="rating"
                type="radio"
                id="rating2"
                value="2"
                on="change:rating.submit">
                <label for="rating2" title="2 stars">☆</label>

                <input name="rating"
                type="radio"
                id="rating1"
                value="1"
                on="change:rating.submit">
                <label for="rating1" title="1 stars">☆</label>
            </fieldset>
                {{!-- <div submit-success>
                    <template type="amp-mustache">
                    <p>Thanks for rating {{rating}} star(s)!</p>
                    </template>
                </div>
                <div submit-error>
                    <template type="amp-mustache">
                        Looks like something went wrong. Please try to rate again. {{error}}
                    </template>
                </div> --}}
            {{!-- </form> --}}
            <br>

            <button class="addNewEntryBtn" style="float: left;" onclick="resetAll()">Reset</button>
            <button type="submit" value="Add" class="addNewEntryBtn" style="float: right;"
            form="newEntryForm">Add</button>

        </div>
    </div>


