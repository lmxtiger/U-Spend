<body>    
    <div style="text-align: center;">
        <h1>Sign Up</h1>
    </div>

    <form action="./home">  
        <div class="container">   
            <label>Email <span>*</span> </label>   
            <input type="email" placeholder="Enter Email" name="email" required>  
            <label>Username <span>*</span> </label>   
            <input type="text" placeholder="Enter Username" name="username" required>  
            <label>Password <span>*</span> </label>   
            <input type="password" placeholder="Enter Password" name="password" required>  
            <label>Confirm Password <span>*</span> </label>   
            <input type="password" placeholder="Reenter Password" name="confirmPW" required>  
            <label>Pet Name (optional)</label>   
            <input type="text" pattern="[A-Za-z]*" placeholder="Only &quot;A-Z & a-z&quot;; max 12 characters" name="petName" maxlength="12" required>  
            <button type="submit">Sign Up</button>   
            Already have an account? <a href="./">Login</a>

