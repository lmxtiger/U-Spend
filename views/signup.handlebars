            border: 2px solid green;   
            box-sizing: border-box;   
        }   
        button {   
            background-color: #4CAF50;   
            width: 100%;  
            color: black;   
            padding: 15px;   
            margin: 15px 0px;   
            border: none;   
            cursor: pointer;   
            font-size: 16px;
            font-family: Calibri, Helvetica, sans-serif;
        }   
        button:hover {   
            opacity: 0.7;   
        }  
        button:focus {
            outline: none;
            box-shadow: none;
        }
        .cancelbtn {   
            display: block;
            width: auto;   
            padding: 10px 18px;  
            margin: 10px 0px;  
        }   

        #app-title{
            font-size: 35px;
            text-align: center;
        }
